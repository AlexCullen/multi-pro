<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
        http://code.alibabatech.com/schema/dubbo http://code.alibabatech.com/schema/dubbo/dubbo.xsd
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.2.xsd">
    <context:property-placeholder location="classpath:conf/sample.properties"/>

    <import resource="classpath:spring/applicationContext-dao.xml"/>
    <import resource="classpath:spring/applicationContext-trans.xml"/>
    <import resource="classpath:spring/applicationContext-service.xml"/>
    <import resource="classpath:spring/applicationContext-activeMQ.xml"/>
    <import resource="classpath:spring/applicationContext-redis.xml"/>

    <dubbo:application name="dubbo-manager-service"/>

    <dubbo:registry protocol="zookeeper" address="192.168.121.144:2181" timeout="30000"/>

    <dubbo:protocol name="dubbo" port="28180"/>

    <dubbo:service interface="com.douby.manager.service.ItemService" ref="itemServiceImpl"/>
    <dubbo:service interface="com.douby.manager.service.ItemCastService" ref="itemCastServiceImpl"/>

</beans>